<h1>Admins::Accounts#show</h1>
<div class="container">
  <div class="row my-3">
    <div class="col-3">
      姓名
    </div>
    <div class="col-8">
      <%= @user.full_name %>
    </div>
  </div>
  <div class="row my-3">
    <div class="col-3">
      ニックネーム
    </div>
    <div class="col-8">
      <%= @user.nickname %>
    </div>
  </div>
  <div class="row my-3">
    <div class="col-3">
      メールアドレス
    </div>
    <div class="col-8">
      <%= @user.email %>
    </div>
  </div>
  <div class="row my-3">
    <div class="col-3">
      生産者ステータス
    </div>
    <div class="col-8">
      <%= @user.is_farmer %>
    </div>
  </div>
  <div class="row my-3">
    <div class="col-3">
      会員ステータス
    </div>
    <div class="col-8">
      <%= @user.is_deleted %>
    </div>
  </div>
  <div class="row my-3">
    <div class="col-2 px-0">
      <%= link_to edit_admins_account_path(@user) do %>
        <button type="button" class="btn btn-success">編集する</button>
      <% end %>
    </div>
  </div>
</div>
