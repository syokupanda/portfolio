<div class="container">
  <h1>新規お問い合わせ</h1>
  <p class="color-red"><%= flash[:error] %></p>
  <div class="row">
    <%= form_with model: @contact, url: contacts_path, local: true do |f| %>
      <%= f.hidden_field :user_id, value: @user.id %>
      <div class="col-12 my-3">
        <%= f.label :"タイトル" %><br>
        <%= f.text_field :title %>
      </div>
      <div class="col-12 my-3">
        <%= f.label :"お問い合わせ目的" %><br>
        <%= f.select :category, Contact.categories.keys %>
      </div>
      <div class="col-12 my-3">
        <%= f.label :"詳細内容" %><br>
        <%= f.text_area :text %>
      </div>
      <div class="col-12 my-3">
        <%= f.submit 'お問い合わせ送信' %>
      </div>
    <% end %>
  </div>
</div>
