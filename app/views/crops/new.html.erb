<div class="container">
  <h1>Crops#new</h1>
  <div class="row">
    <%= form_with model: @crop, url: account_crops_path(current_user.id), local:true do |f| %>
      <%= f.hidden_field :user_id, value: current_user.id %>
      <div class="col-12 my-3">
        <%= f.label :"投稿画像" %><br>
        <%= f.attachment_field :image %>
      </div>
      <div class="col-12 my-3">
        <%= f.label :"投稿画像紹介文" %><br>
        <%= f.text_area :introduction, class: "crop_introduction_box" %>
      </div>
      <div class="col-12 my-3">
        <%= f.submit '新規登録する', class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>