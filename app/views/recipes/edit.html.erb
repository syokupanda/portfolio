<div class="container">
  <h1>Recipes#edit</h1>
  <div class="row">
    <%= form_with model: @recipe, url: recipe_path, local:true do |f| %>
      <%= f.hidden_field :user_id, value: current_user.id %>
      <div class="col-12 my-3">
        <%= f.label :"レシピ完成品画像" %>
        <%= f.attachment_field :image %>
      </div>
      <div class="col-12 my-3">
        <%= f.label :"レシピ名" %>
        <%= f.text_field :name %>
      </div>
      <div class="col-12 my-3">
        <p>ポイント・一言</p>
        <%= f.text_area :introduction, class: "recipe_point_box" %>
      </div>
      <div class="col-12 my-3">
        <p>材料</p>
        <%= f.text_area :ingredients, class: "recipe_ingredients_box" %>
      </div>
      <div class="col-12 my-3">
        <p>カテゴリー</p>
        <%= f.collection_select(:category_id, @categories, :id, :name) %>
      </div>
      <div class="col-12 my-3">
        <%= f.label :tag_list %><br>
        <%= f.text_field :tag_list, value: @recipe.tag_list.join(',') %>
      </div>
      <div class="col-12 my-3">
        <p>おすすめ登録</p>
        <%= f.radio_button :recommend, :true, checked: true %>
        <span>おすすめにする</span>
        &nbsp;&nbsp;
        <%= f.radio_button :recommend, :false%>
        <span>おすすめにしない</span>
      </div>
      <%= f.submit 'レシピ登録', class: "btn btn-success" %>
    <% end %>
  </div>
</div>

