<h1>Recipes#new</h1>

<%= form_with model: @recipe, url:'/recipes', local:true do |f| %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.label :"レシピ完成品画像" %><br>
  <%= f.attachment_field :image %><br>
  <%= f.label :"レシピ名" %>
  <%= f.text_field :name %>
  <p>ポイント・一言</p>
  <%= f.text_area :introduction %>
  <%= f.label :tag_list %>
  <%= f.text_field :tag_list, value: @recipe.tag_list.join(',') %>
  <%= f.submit 'レシピ登録', class: "btn btn-success" %>
<% end %>